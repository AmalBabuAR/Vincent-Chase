
	<!--checkout-->
	<section class="banner-bottom-wthreelayouts py-lg-5 py-3">
		<div class="p-5 m-5">
			<div class="inner-sec-shop px-lg-4 px-3">
				<h3 class="tittle-w3layouts my-lg-4 mt-3">Shoping Cart </h3>
				<div class="checkout-right">
					<h4>Your shopping cart contains:
						<span>3 Products</span>
					</h4>
					<table class="timetable_sub">
						<thead>
							<tr>
								<th>SL No.</th>
								<th>Product</th>
								<th>Quantity</th>
								<th>Product Name</th>

								<th>Price</th>
								<th>Remove</th>
							</tr>
						</thead>
						
						<% products.forEach(products => { %>
						<tbody>
							<tr class="rem1">
								<td class="invert">1</td>
								<td class="invert-image">
									<a href="/singleview/<%= products.product._id %>">
										<img src="/product-image/<%= products.product._id%>.jpg" alt=" " class="img-responsive">
									</a>
								</td>
								<span><%= users.Name%> </span>
								<td class="invert">
									<div class="quantity">
										
										<button  onclick="changeQuantity('<%= products._id %>','<%= products.product._id %>','<%= products.quantity %>',-1)">-</button>
										<span id="<%= products.product._id %>"> <%= products.quantity %> </span>
										<button  onclick="changeQuantity('<%= products._id %>','<%= products.product._id %>','<%= products.quantity %>',1)">+</button>
										
									</div>
								</td>
								<td class="invert"><%= products.product.Name %></td>

								<td class="invert">Rs.<%= products.product.Price %></td>
								<td class="invert">
									<div class="rem">
										<div class="close1"> </div>
									</div>

								</td>
							</tr>

							<% }) %>

						</tbody>
					</table>
				</div>
				<div class="checkout-left row">
					<div class="col-md-4 checkout-left-basket">
						<h4>Continue to basket</h4>
						<ul>
							<li>Product1
								<i>-</i>
								<span>$281.00 </span>
							</li>
							<li>Product2
								<i>-</i>
								<span>$325.00 </span>
							</li>
							<li>Product3
								<i>-</i>
								<span>$325.00 </span> 
							</li>
							<li>Total Service Charges
								<i>-</i>
								<span>$55.00</span>
							</li>
							<li>Total
								<i>-</i>
								<span id="total">Rs.<%= totalValue %> </span>
							</li>
						</ul>
					</div>
					<div class="col-md-8 address_form">
					
						
						<div class="checkout-right-basket">
							<a href="/place-order">Place Order </a>
						</div>
					</div>

					<div class="clearfix"> </div>

				</div>

			</div>
		</div>
		
	</section>

	<script>
        console.log(3455657876576789);
        function changeQuantity(cartId,proId,qty,count) {
            console.log(123456789);
           qty = parseInt(qty)
           console.log(typeof(qty));

            $.ajax({
                url:'/changeproductquantity',
                data:{
                    cart:cartId,
                    product:proId,
                    count:count,
                    quantity:qty
                },
                method:'POST',
                success:(response)=>{
                    console.log(response);
					 location.reload()
                    if(response.removeProduct){
                        alert("Product Removed from cart")
                       
                    }else{
                        document.getElementById(proId).innerHTML=qty+count
						document.getElementById('total').innerHTML.total
                    }
                }
            })   
        }
    </script> 