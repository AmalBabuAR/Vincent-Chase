<section>
    <div class="container">
        <div class="row mt-4">
            <a href="/admin/add-product" class="btn btn-success ml-auto">Add Products</a>
        </div>
        <table class="table mt-5">
            <thead>
                <tr>
                    <th scope="col">Date</th>
                    <th>Address</th>
                    <th>Pincode</th>
                    <th>Mobile</th>
                    <th scope="col">Amount</th>
                    <th scope="col">Payment</th>
                    <th>status</th>
                </tr>
            </thead>
            <tbody>
                <% orders.forEach(orders=>{%> 
                <tr>
                    <td><%= orders.date %> </td>
                    <td><%= orders.deliveryDetails.address %> </td>
                    <td><%= orders.deliveryDetails.pincode %></td>
                    <td><%= orders.deliveryDetails.mobile %></td>
                    <td><%= orders.totalAmount %></td>
                    <td><%= orders.paymentMethod %></td>
                    <td><%= orders.status %></td>
                    <td>
                        <a href="/view-order-products/<%= orders._id %>" class="btn btn-primary">View Products</a>
                    </td>
                </tr>
                <% })  %> 
            </tbody>
        </table>
    </div>
</section>