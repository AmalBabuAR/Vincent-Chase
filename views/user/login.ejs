
<!-- Sing in  Form -->
<div class="pt-5">
<section class="sign-in ">
    <div class="container pt-5">
        <div class="signin-content">
            <div class="signin-image">
                <figure><img src="images/login.jpg" alt="sing up image"></figure>
                <a href="/signup" class="signup-image-link">Create an account</a>
            </div>

            <div class="signin-form">
                <h2 class="form-title">Login in</h2>
                <form action="/login" method="POST" class="register-form" id="login-form">
                    <div class="form-group">
                        <label><i class="zmdi zmdi-account material-icons-name"></i></label>
                        <input type="email" name="Email" id="your_name" 
                        <% if(locals.user){ %>
                            placeholder="<%= locals.user %>"
                       <% }else{ %>
                    placeholder="Your Email"
                        <% } %>"/>
                    </div>
                    <div class="form-group">
                        <label><i class="zmdi zmdi-lock"></i></label>
                        <input type="password" name="Password" id="your_pass" 
                        <% if(locals.pwd){ %>
                            placeholder="<%= locals.pwd %>"
                       <% }else{ %>
                    placeholder="Your Password"
                        <% } %>"
                        />
                    </div>
                    <!-- <div class="form-group">
                        <input type="checkbox" name="remember-me" id="remember-me" class="agree-term" />
                        <label for="remember-me" class="label-agree-term"><span><span></span></span>Remember me</label>
                    </div> -->
                    <div class="form-group form-button">
                        <input type="submit" id="signin" class="form-submit" value="Log in"/>
                    </div>
                    
                </form>
                <div class="social-login">
                    <span class="social-label">Or login with</span>
                    <ul class="socials">
                        <li><a href="#"><i class="display-flex-center zmdi zmdi-facebook"></i></a></li>
                        <li><a href="#"><i class="display-flex-center zmdi zmdi-twitter"></i></a></li>
                        <li><a href="#"><i class="display-flex-center zmdi zmdi-google"></i></a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>
</div>