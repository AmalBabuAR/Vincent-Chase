 <section>
    <div class="container   mt-3">
        <div class="row">
            <div class="col-md-6">
            <a href="/admin/add-product" class="btn btn-success ml-auto">Add Product</a>
        </div>
        </div>
        <table class="table mt-5">
            <thead>
              <tr>
                <th scope="col">no</th>
                <th scope="col">Title</th>
                <th scope="col">Category</th>
                <th scope="col">Description</th>
                <th scope="col">Images</th>
                <th scope="col">Action</th>
              </tr>
            </thead>
            <tbody>
              <%let no=1%>
                <% products.forEach(products => { %>
              <tr> 
                
                <th scope="row"><%= no++ %></th>
                <td><%= products.Name %></td>
                <td><%= products.Category %></td>
                <td><%= products.Description %></td>
                <td><img style="width:50px;height:50px" src="/product-image/<%= products._id%>.jpg" alt="" srcset=""></td>
                <td>
                  <a href="/admin/edit-product/<%= products._id %>" class="btn btn-primary">Edit</a>
                  <a href="/admin/delete-product/<%= products._id %>" class="btn btn-danger" onclick="return confirm('Are you want to delete <%= products.Name %> ? ')">delete</a>
                </td>
              </tr>

              <% }) %>
            </tbody>
          </table>
    </div>
 </section>