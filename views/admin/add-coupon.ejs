
<div class="container">
    <form method="post" action="/admin/add-coupon">
        <div class="form-group">
            <label class="col-lg-3 control-label text-lg-left pt-2" for="inputRounded">Coupon code</label>
            <div class="col-lg-6">
                <input type="text" name="coupon" class="form-control input-rounded" id="inputRounded">
            </div>
        </div>
        <div class="form-group ">
            <label class="col-lg-3 control-label text-lg-left pt-2" for="inputRounded">Minimum value</label>
            <div class="col-lg-6">
                <input type="number" name="minvalue" class="form-control input-rounded" id="inputRounded">
            </div>
        </div>
        <div class="form-group">
            <label class="col-lg-3 control-label text-lg-left pt-2" for="inputRounded">Discount</label>
            <div class="col-lg-6">
                <input type="number" name="discount" class="form-control input-rounded" id="inputRounded">
            </div>
        </div>
        <div class="form-group">
            <label class="col-lg-3 control-label text-lg-left pt-2" for="inputRounded">Date</label>
            <div class="col-lg-6">
                <input type="date" name="date" class="form-control input-rounded" id="inputRounded">
            </div>
        </div>
       
        <div class="form-group ">
            <button class="btn btn-danger col-lg-right ml-2" type="submit">Adding Coupon</button>
        </div>
      </form>
</div>