<div class="pl-5 pr-5 m-5">
<form method="post" action="/admin/add-category">
    <div class="mb-3 mx-2">
            <label class="form-label mx-3">Add New Category</label>
            <div class="input-group col-6">
                <input type="text" name="Category" class="form-control" placeholder="New Category">
                <button class="btn btn-dark" type="submit">Add Category</button>
            </div>
        </div>
    </form>

    <div class="container pt">
        <table class="table table-striped table-centered mb-0">
            <thead>
                <tr>
                    <th>Category</th>
                
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% category.forEach(category => { %> 
                <tr>
                    <td class="table-user col-10">
                        <%= category.Category  %> 
                    </td>
                    <td class="table-action col-auto">
                        
                            <a href="/admin/edit-category/<%= category._id  %> " class="btn btn-primary">Edit</a>
                            <a href="/admin/delete-category/<%= category._id  %> " class="btn btn-danger" onclick="return confirm('Are you want to delete <%= category.Category  %> ?')" >delete</a>
                
                    </td>
                </tr>

                <% }) %> 
            </tbody>
        </table>
        
                      
    </div>  
       
</div>
   


                